body
    form(action="http://localhost:9000/payment" method='POST')
        br
        br

        label Card Number
        br
        input(type="text" name="cardnum" placeholder='Card Number' pattern='[0-9]{13,16}')
        label(style="color:red; text-decoration:bold") *Must be 13 or 16 digit numbers only
        br
        br
        
        label Expiration Date
        br
        select
                    option(value="01") January
                    option(value="02") February 
                    option(value="03") March
                    option(value="04") April
                    option(value="05") May
                    option(value="06") June
                    option(value="07") July
                    option(value="08") August
                    option(value="09") September
                    option(value="10") October
                    option(value="11") November
                    option(value="12") December

        select
                   
                    option(value="21") 2021
                    option(value="22") 2022
                    option(value="23") 2023
                    
                
        br
        br

        label CVV
        br
        input(type="tel" name="cvv" placeholder='CVV' pattern="[0-9]{3}")
        label(style="color:red; text-decoration:bold") *Must be 3 digit numbers only
        br
        br

        label Amount = #{amount}
        br
        br

        input(type="submit" name="submit" value="Submit")




        
        
                